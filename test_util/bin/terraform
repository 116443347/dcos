#!/bin/bash

if [ -z "$TERRAFORM_VERSION" ]; then
  echo "TERRAFORM_VERSION env variable is required"
  exit 1
fi

set -x -e
docker run -it -v $(pwd):/config -w /config \
	-e AWS_REGION -e AWS_PROFILE \
        -e TF_VAR_custom_dcos_download_path -e TF_VAR_custom_dcos_download_path_win -e TF_VAR_variant \
	"dcosterraform/terraform-jenkins:${TERRAFORM_VERSION}" "$@"
